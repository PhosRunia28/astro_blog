---
const {currentPage, totalPage, disablePrevious, disableNext} = Astro.props;
interface Props {
    currentPage: number;
    totalPage: number;
    disablePrevious: boolean;
    disableNext: boolean;
}
---

<div class="flex justify-between mt-10">
    <a href={`/articles?page=${currentPage - 1}`} class={disablePrevious ? "inline-block text-gray-400 bg-indigo-100 px-3 py-2 rounded-lg pointer-events-none" : "inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"}>
    Previous
    </a>
    <a href={`/articles?page=${currentPage + 1}`}
    class={disableNext ? "inline-block text-gray-400 bg-indigo-100 px-3 py-2 rounded-lg pointer-events-none" : "inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"}>
    Next
    </a>
</div>